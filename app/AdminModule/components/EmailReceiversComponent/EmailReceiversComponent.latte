<div class="contact_form">
    {form emailReceiversForm class => "ajax contact_form"}
        {if $form->hasErrors()}
            <ul class="errors">
                <li n:foreach="$form->errors as $error">{$error}</li>
            </ul>
        {/if}
        <p>{input email class => "email" }</p>
        <p>{input submit class => "submit" }</p>
    {/form}
</div>