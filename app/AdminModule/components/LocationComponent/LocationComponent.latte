<div class="contact_form">
    {form locationForm class => "ajax contact_form"}

        <!-- Jednoduché vykreslení chyb -->
        <ul class="errors" n:if="$form->hasErrors()">
            <li n:foreach="$form->errors as $error">{$error}</li>
        </ul>

        <p>{label text_about /}{input text_about }</p>
        <p>{label files_about /} <b>(nepovinné - lze nahrát dodatečně)</b></p>{input files_about}
        <p>{label text_surroundings /}{input text_surroundings }</p>
        <p>{label files_surroundings /} <b>(nepovinné - lze nahrát dodatečně)</b></p>{input files_surroundings}
        <p>{input submit class => "btn btn-lg btn-default" }</p>
    {/form}
</div>